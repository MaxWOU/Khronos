@model BeyondTheTutor.Models.ProfilePictureModels.ProfilePicture

<br />
<body class="wou-grey-bg">
    <div class="ui divided grid center aligned">
        <div class="row six wide column">
            <div class="column">
                <div class="ui grid registration">

                        <div class="ui centered card">
                            
                            <a class="image" href="#">
                                @if (ViewBag.UserHasProfilePicture == false)
                                {
                                    <img width="240" height="240" src='~/Content/images/helen.jpg' />
                                }
                                else
                                {
                                    <img width="240" height="240" src='@Url.Action("RetrieveCurrentTutorProfilePicture", "Tutors", new { id = ViewBag.currentUserID})' />
                                }

                            </a>
                            <div class="content">
                                <p class="header">@ViewBag.userFirstName @ViewBag.userLastName</p>
                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>
    <div class="ui divided grid center aligned">
        <div class="row six wide column">
            <div class="column">
                <div class="ui grid registration">
                    <div class="ui attached fluid segment form">
                        @using (Html.BeginForm("TutorProfile", "Tutors", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <h2>Update Profile Picture</h2>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div>
                                        <label for="userPicture" class="ui icon button">
                                            <i class="file icon"></i>
                                            Open File
                                        </label>
                                        <input type="file" id="userPicture" name="userPicture" style="display:none"/>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="fluid ui button schedule">Upload Photo</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/Scripts/main.js"></script>
}


