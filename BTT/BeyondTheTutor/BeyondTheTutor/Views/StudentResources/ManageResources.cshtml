@model IEnumerable<BeyondTheTutor.Models.StudentResource>

<body class="wou-grey-bg">
    <div class="ui one column stackable page grid">
        <div class="ui red message schedule"><i class="close icon"></i>Careful! You may edit or delete resources. Deletion cannot be undone.</div>
        <table class="ui striped table ui selectable celled table table-schedule">
            <thead>
                <tr>
                    <th colspan="4"><h1 class="ui centered header">@ViewBag.currentUser's Resource List</h1></th>
                </tr>
            </thead>
            <thead>
                <tr>
                    <th><h4>Resource Topic</h4></th>
                    <th><h4>URL for Topic</h4></th>
                    <th><h4>How You Want Link Displayed</h4></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Topic)</td>
                        <td>@Html.DisplayFor(modelItem => item.URL)</td>
                        <td>@Html.DisplayFor(modelItem => item.DisplayText)</td>
                        <td style="text-align: center;">
                            <button class="ui negative basic button small ui button">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                            </button>
                            <button class="ui negative basic button small ui button">
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}

