<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendarcss")
    <link rel="stylesheet" type="text/css" href="~/Content/semantic.min.css">
</head>
<body>


        <div class="ui secondary large pointing menu">
            <a href="/Home/Index" class="item @(ViewBag.Current == "HomeIndex" ? "red active" : "")"><i class="home icon"></i>Beyond the Tutor</a>
            <div class="right menu">
                <a href="/Home/FAQ" class="item @(ViewBag.Current == "HomeFAQ" ? "red active" : "")">FAQ</a>
                <a href="/Home/Privacy" class="item @(ViewBag.Current == "HomePrivacy" ? "red active" : "")">Privacy policy</a>
                <a href="/Account/Login" class="item @(ViewBag.Current == "AccountLogin" ? "red active" : "")">Login</a>
                <a href="/Account/Register" class="item @(ViewBag.Current == "AccountRegister" ? "red active" : "")">Register</a>
            </div>
        </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    <script src="~/Scripts/semantic.min.js"></script>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Beyond the Tutor</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
