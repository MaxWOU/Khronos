<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendarcss")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/semantic.min.css">
</head>
<body>
    <div class="ui inverted menu">
        <a href="/Home/Index" class="item">Home</a>

        @if (Request.IsAuthenticated)
        {
            <div class="right menu">
            using(Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ActionLink("Account Settings", "Index", "Manage", new { area = "" }, htmlAttributes: new { @class = "item", title = "Manage Account" })
                <a href="javascript:document.getElementById('logoutForm').submit()" class="item">Sign out</a>
            }
                </div>
        }
        else
        {
            <div class="right menu">
                <a href="/Account/Login" class="item">Sign in</a>
                <a href="/Account/Register" class="item">Register</a>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    <script src="~/Scripts/semantic.min.js"></script>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Beyond the Tutor</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
