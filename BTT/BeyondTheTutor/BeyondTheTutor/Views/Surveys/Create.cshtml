@model BeyondTheTutor.Models.SurveyModels.Survey

<body class="wou-silver-bg">
    <div class="ui one column center aligned stackable page grid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="ui striped four wide column center aligned table table-schedule">
                <thead style="text-align: center;">
                    <tr>
                        <th>
                            <b >Create an experianced-based survey where students can only use a 1-5 STAR rating to answers questions</b>
                            <br /><i style="font-size: 10px">There will be no short answers or any form of textual input for the students</i>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <b>Name your survey</b>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="ui fluid input">
                                        <input class="form-control text-box single-line" data-val="true" style="color: red"
                                               data-val-required="The AskingQuestion field is required."
                                               id="Name" name="Name" type="text"
                                               placeholder="Example: Becka's CS360 Survey">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                        </th>
                    </tr>
                    <br />
                    <tr>
                        <th>
                            <b>Describe your survey</b>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <div class="ui fluid input">
                                        <input class="form-control text-box single-line" data-val="true"
                                               data-val-required="The AskingQuestion field is required."
                                               id="Description" name="Description" type="text"
                                               placeholder="Example: Survey for guaging the students' experiance">
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                        </th>

                    </tr>
                    <br />
                    <tr>
                        <th>
                            <b>Which class is this survey for</b>

                            <div class="field">
                                @Html.DropDownList("ClassID", null, htmlAttributes: new { @class = "ui selection dropdown form-control" })
                                @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="fluid ui button schedule">Create</button>
                                </div>
                            </div>
                            <br />
                            <button class="fluid ui basic button">
                                @Html.ActionLink("Back to Surveys", "Index")
                            </button>
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</body>


@section scripts
{
    <script src="~/Scripts/main.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
