<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendarcss")
    <link rel="stylesheet" type="text/css" href="~/Content/semantic.min.css">
</head>
<body>
    <div class="ui inverted menu">
        @Html.ActionLink("Beyond the Tutor", "Index", "Home", new { area = "" }, htmlAttributes: new { @class = "item" })
        <a href="/Tutor/Home/Index" class="item">Tutor Portal</a>
        <div class="right menu">
            <div class="ui simple dropdown item">
                Resources
                <i class="dropdown icon"></i>
                <div class="menu">
                    <a href="/StudentResources/Index" class="item">View</a>
                    <a href="/StudentResources/Manage" class="item">Manage</a>
                </div>
            </div>
            <div class="ui simple dropdown item">
                Scheduling
                <i class="dropdown icon"></i>
                <div class="menu">
                    <a href="/Tutor/TutorSchedules/Create" class="item">Add New</a>
                    <a href="/Tutor/TutorSchedules/UpdateSchedule" class="item">Manage</a>
                </div>
            </div>
            <a href="/Tutor/Home/Guide" class="item">User Guide</a>
            @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" class="item">Sign out</a>
            }
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    <script src="~/Scripts/semantic.min.js"></script>

    <div class="container body-content">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>