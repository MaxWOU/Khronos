@using BeyondTheTutor.Models.ViewModels
@model List<AllUsersViewModel>

@{
    ViewBag.Placeholder = "Searching examples: \"V87654321\", \"Maksim Stoyanov\", \"Tutor\", \"SomeEmail@wou.edu\"";
}


<body class="wou-silver-bg">
    <div class="ui one column stackable page grid">
        <br />
        <div class="ui message column twenty wide" style="text-align: center;">
            <i class="info icon" id="message"></i>Current users in the database. <br />
            <i>@ViewBag.Placeholder</i>
        </div>


        @if (ViewBag.message != null)
        {
            <div class="ui sixteen wide column" style="text-align: center;">
                <div class="ui red message" style="text-align: center;">
                    <i class="user times icon" id="message"></i>

                    <B>@ViewBag.message</B>
                </div>
            </div>
        }

        @if (ViewBag.created != null)
        {
            <div class="ui sixteen wide column" style="text-align: center;">
                <div class="ui green message" style="text-align: center;">
                    <i class="user outline icon" id="created"></i>
                    <B>@ViewBag.created</B>
                </div>
            </div>
        }

                    @if (ViewBag.created != null)
                    {
                        <div class="ui sixteen wide column" style="text-align: center;">
                            <div class="ui green message" style="text-align: center;">
                                <i class="user outline icon" id="created"></i>
                                <B>@ViewBag.created</B>
                            </div>
                        </div>
                    }


        <br />
        <div class="form-horizontal" style="float: right;">
            @using (Html.BeginForm("Index", "AllUsers", FormMethod.Get))
            {
                <div class="form-group form-horizontal">
                    @Html.TextBox("search", null, new { @class = "form-control", type = "text", style = "float: right;" })
                    <Button type="submit" class="button" style="float: right;">Search</Button>
                </div>
            }
        </div>
        <table class="ui striped table ui selectable celled table table-schedule">
            <thead>
                <tr>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>VNumber</th>
                    <th>Role</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <button class="ui basic button">
                                <i class="icon trash"></i>
                                @Html.ActionLink("Delete User", "Delete", new { id = item.ID })
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}